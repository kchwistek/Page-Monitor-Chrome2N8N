{
  "name": "page-monitor-to-n8n",
  "version": "1.0.0",
  "description": "A Chrome extension that monitors web pages and sends content changes to n8n automation workflows",
  "main": "src/popup/popup.js",
  "scripts": {
    "build": "node scripts/build-config.js",
    "build-config": "node scripts/build-config.js",
    "test": "node tests/page-monitor.test.js",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo 'Consider adding ESLint for code quality'",
    "package": "npm run build-config && zip -r page-monitor-to-n8n-v1.0.zip . -x '*.git*' 'node_modules/*' '*.DS_Store' 'package*.json' 'docs/*' '.env*'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Klikwork/linkedin2n8n.git"
  },
  "keywords": [
    "chrome-extension",
    "page-monitor",
    "n8n",
    "automation",
    "workflow",
    "content-monitoring",
    "change-detection",
    "webhook",
    "page-tracking"
  ],
  "author": "Karel Chwistek <k.chwistek@volny.cz>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Klikwork/linkedin2n8n/issues"
  },
  "homepage": "https://github.com/Klikwork/linkedin2n8n#readme",
  "engines": {
    "chrome": ">=88.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jsdom": "^26.1.0"
  },
  "extensionInfo": {
    "manifestVersion": 3,
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "hostPermissions": [
      "*://www.linkedin.com/*",
      "*://linkedin.com/*"
    ],
    "contentScripts": [
      "src/content-scripts/content-normal.js",
      "src/content-scripts/content-sales.js"
    ],
    "popup": "src/popup/popup.html",
    "background": "src/background/background.js"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/popup/popup.js",
      "!src/background/background.js",
      "!src/background/page-monitor.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
