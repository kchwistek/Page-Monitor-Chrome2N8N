#!/bin/bash
#
# Pre-commit hook for Page Monitor to n8n extension
# Runs validation checks before allowing commit
#

set -e

echo "üîç Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if we're in the right directory
if [ ! -f "manifest.json" ]; then
    echo -e "${RED}‚ùå Error: manifest.json not found. Are you in the project root?${NC}"
    exit 1
fi

# 1. Validate manifest.json
echo "üìã Validating manifest.json..."
if ! node scripts/build-config.js > /dev/null 2>&1; then
    echo -e "${RED}‚ùå Manifest validation failed!${NC}"
    echo "   Run 'npm run build-config' to see details"
    exit 1
fi
echo -e "${GREEN}‚úÖ Manifest validation passed${NC}"

# 2. Check for console.log statements (exclude scripts/ directory)
echo "üîç Checking for console.log statements..."
# Exclude scripts/ directory and test files from console.log check
CONSOLE_FILES=$(git diff --cached --name-only | grep -E '\.(js|html)$' | grep -v '^scripts/' | grep -v '\.test\.js$' | xargs grep -l "console\.log" 2>/dev/null || true)
if [ ! -z "$CONSOLE_FILES" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Warning: console.log statements found in staged files${NC}"
    echo "$CONSOLE_FILES"
    echo "   Consider removing them before committing"
    read -p "   Continue anyway? (y/n) " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        exit 1
    fi
fi

# 3. Check file sizes (warn if files are too large)
echo "üì¶ Checking file sizes..."
LARGE_FILES=$(git diff --cached --name-only | xargs ls -lh 2>/dev/null | awk '{if ($5+0 > 1048576) print $9, $5}')
if [ ! -z "$LARGE_FILES" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Warning: Large files detected:${NC}"
    echo "$LARGE_FILES"
fi

# 4. Ensure no sensitive data is committed
echo "üîí Checking for sensitive data..."
# Exclude documentation, config files, hooks, and scripts from sensitive data check
EXCLUDE_FILES="PRIVACY.md|README.md|PUBLISHING.md|\.md$|\.txt$|docs/|LICENSE|\.gitignore|\.github/|\.git/hooks/|scripts/hooks/|scripts/.*\.sh$|scripts/.*\.js$"

# Check for actual sensitive data patterns (not just the words)
# Look for patterns that indicate hardcoded credentials
SENSITIVE_PATTERNS=(
    "api[_-]?key\s*[=:]\s*['\"][^'\"]{10,}"  # api_key = "..." or api-key: "..."
    "secret[_-]?key\s*[=:]\s*['\"][^'\"]{10,}"  # secret_key = "..." or secret-key: "..."
    "password\s*[=:]\s*['\"][^'\"]{6,}"  # password = "..." (not just the word)
    "token\s*[=:]\s*['\"][^'\"]{10,}"  # token = "..." (not just the word)
    "https?://[^:]+:[^@]+@"  # URLs with credentials like https://user:pass@
    "BEGIN\s+(RSA\s+)?PRIVATE\s+KEY"  # Private keys
    "-----BEGIN"  # Certificate/Key blocks
)

FOUND_SENSITIVE=false
# Get staged files excluding documentation, hooks, and scripts
STAGED_FILES=$(git diff --cached --name-only | grep -vE "$EXCLUDE_FILES" || true)

if [ ! -z "$STAGED_FILES" ]; then
    for pattern in "${SENSITIVE_PATTERNS[@]}"; do
        # Check only staged source files, excluding documentation and hooks
        # Use --diff-filter to only check additions/modifications
        MATCHES=$(git diff --cached --diff-filter=AM -- "$STAGED_FILES" | grep -iE "^\+.*$pattern" | grep -v "^\+.*#" | grep -v "^+++" 2>/dev/null || true)
        if [ ! -z "$MATCHES" ]; then
            echo -e "${RED}‚ùå Potential sensitive data found:${NC}"
            echo "$MATCHES" | head -3
            FOUND_SENSITIVE=true
        fi
    done
fi

if [ "$FOUND_SENSITIVE" = true ]; then
    echo -e "${RED}‚ùå Please review your changes for sensitive data before committing${NC}"
    echo "   The check looks for hardcoded credentials, API keys, passwords, etc."
    exit 1
fi

echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
exit 0

