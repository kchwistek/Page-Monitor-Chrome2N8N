#!/bin/bash
#
# Pre-push hook for Page Monitor to n8n extension
# Runs tests before allowing push
#

set -e

echo "üß™ Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if we're in the right directory
if [ ! -f "package.json" ]; then
    echo -e "${RED}‚ùå Error: package.json not found. Are you in the project root?${NC}"
    exit 1
fi

# 1. Validate manifest
echo "üìã Validating manifest..."
if ! npm run build-config > /dev/null 2>&1; then
    echo -e "${RED}‚ùå Manifest validation failed!${NC}"
    exit 1
fi
echo -e "${GREEN}‚úÖ Manifest validation passed${NC}"

# 2. Run tests (if available)
if [ -f "package.json" ] && grep -q '"test"' package.json; then
    echo "üß™ Running tests..."
    if npm test > /dev/null 2>&1; then
        echo -e "${GREEN}‚úÖ All tests passed${NC}"
    else
        echo -e "${YELLOW}‚ö†Ô∏è  Some tests failed or no tests found${NC}"
        echo "   Run 'npm test' manually to see details"
        read -p "   Continue with push anyway? (y/n) " -n 1 -r
        echo
        if [[ ! $REPLY =~ ^[Yy]$ ]]; then
            exit 1
        fi
    fi
else
    echo -e "${YELLOW}‚ö†Ô∏è  No test script found in package.json${NC}"
fi

# 3. Check if package can be built (optional - only if zip is available)
echo "üì¶ Testing package build..."
if command -v zip > /dev/null 2>&1; then
    if npm run package > /dev/null 2>&1; then
        echo -e "${GREEN}‚úÖ Package build successful${NC}"
    else
        echo -e "${YELLOW}‚ö†Ô∏è  Package build failed (zip may not be installed)${NC}"
        echo "   This is optional - continuing with push..."
        # Don't block push if package build fails - it's optional
    fi
else
    echo -e "${YELLOW}‚ö†Ô∏è  zip command not found - skipping package build check${NC}"
    echo "   Install zip to enable package build verification"
    # Still validate that the build-config works
    if npm run build-config > /dev/null 2>&1; then
        echo -e "${GREEN}‚úÖ Build configuration validated${NC}"
    else
        echo -e "${RED}‚ùå Build configuration validation failed!${NC}"
        exit 1
    fi
fi

echo -e "${GREEN}‚úÖ All pre-push checks passed!${NC}"
exit 0

